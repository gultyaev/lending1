.video-container
  position relative
  width 80%
  margin 2em auto 3em
  @media all and (max-width: 440px)
    width 100%
  &:before
    display: block;
    content: "";
    width: 100%;
    padding-top: 56.25%;
  &>iframe
    width 100%
    height 100%
    position absolute
    top 0
    left 0

#video-thumbnail
  width 100%
  height 100%
  position absolute
  left 0
  top 0
  cursor pointer
  z-index 1
  &>img
    width 100%
    height 100%
  &:after
    content url(./img/play-button.svg)
    display block
    width 60px
    height 60px
    z-index 2
    position absolute
    top 50%
    left 50%
    transform translate(-50%,-50%)

.none
  display none
  z-index -2